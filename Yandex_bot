// ==UserScript==
// @name         New Ya
// @namespace    http://tampermonkey.net/
// @version      0.1
// @description  Яндекс
// @author       ElenaMikhaylova
// @match         https://yandex.ru/*
// ==/UserScript==

let btnK =document.getElementsByClassName("button mini-suggest__button")[0];
let keywords=["центр морского права", "права на лодку","права гимс"];
let keyword=keywords[getRandom(0, keywords.length)];
document.getElementsByName("text")[0].value=keyword;
console.log("Задали ключ    "+ document.getElementsByName("text")[0].value);

if(btnK!=undefined){
    btnK.click();
}
else {
    let links =document.links;
    for (let i=0; i<links.length; i++) {
        if (links[i].href.includes('sea-law.ru')){
            console.log("Нашел строку" + links[i]);
            let link=links[i];
            console.log("Передали на клик "+ link);
            link.click();
            break;
        }
    }
}

function getRandom(min,max){
    return Math.floor(Math.random()*(max-min)+min)
}
